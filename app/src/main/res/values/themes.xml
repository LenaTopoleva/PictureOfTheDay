<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Moon" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/snuff</item>
        <item name="colorPrimaryVariant">@color/chatelle</item>
        <item name="colorPrimaryDark">@color/chatelle</item>
        <item name="colorPrimarySurface">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorSurface">?colorPrimarySurface</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/malibu</item>
        <item name="colorSecondaryWithAlfa">@color/alfa_malibu</item>
        <item name="colorSecondaryVariant">@color/indigo</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Background color. -->
        <item name="android:windowBackground">@color/color_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Window animation -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>

        <item name="collapsedTitleTextAppearance">?colorOnPrimary</item>
        <!-- Font -->
        <item name="mainFont">@font/open_sans</item>
        <item name="mainFontBoldItalic">@font/open_sans_bold_italic</item>
    </style>

    <style name="Theme.Mars" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/tall_poppy</item>
        <item name="colorPrimaryVariant">@color/cod_gray</item>
        <item name="colorPrimaryDark">@color/sangria</item>
        <item name="colorPrimarySurface">?colorPrimary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSurface">@color/persian_red</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/trinidad</item>
        <item name="colorSecondaryVariant">@color/blaze_orange</item>
        <item name="colorSecondaryWithAlfa">@color/alfa_trinidad</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Background color. -->
        <item name="android:windowBackground">?colorPrimaryVariant</item>
        <!-- Window animation -->
        <item name="android:windowAnimationStyle">@style/WindowAnimationTransition</item>
        <!-- Bottom navigation -->
        <item name="bottomNavigationStyle">@style/MyBottomNavigationStyle</item>
        <!-- Font -->
        <item name="mainFont">@font/open_sans</item>
        <item name="mainFontBoldItalic">@font/open_sans_bold_italic</item>

    </style>

    <style name="TitleBarTextAppearance" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/open_sans_bold_italic</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="ExpandedAppBar" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MyBottomNavigationStyle" parent = "Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_menu_item_color</item>
        <item name="itemTextColor">@color/bottom_menu_item_color</item>
    </style>

    <style name="WindowAnimationTransition">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
        <item name="android:fragmentEnterTransition">@android:anim/fade_in</item>
        <item name="android:fragmentExitTransition">@android:anim/fade_out</item>
    </style>

    <style name="Widget.App.Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="Widget.App.Chip.NightMode" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">?colorOnSecondary</item>
    </style>

    <style name="MyTextInputLayout" parent = "Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?colorSurface</item>
        <item name="helperTextTextColor">?colorPrimaryDark</item>
    </style>

</resources>